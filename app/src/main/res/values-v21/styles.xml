<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/browse_brand</item>
        <item name="colorPrimaryDark">@color/browse_brand</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="themeName">dark</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarDivider">@null</item>
        <item name="android:actionBarDivider">@null</item>

        <item name="actionBarTheme">@style/ToolbarStyle</item>
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>


        <item name="actionModeBackground">@color/browse_brand</item>
        <item name="actionBarPopupTheme">@style/ToolbarStyle</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Custom</item>
        <item name="android:dialogTitle">@style/DialogWindowTitle_Custom</item>

    </style>
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/browse_brand</item>
        <item name="colorPrimaryDark">@color/browse_brand</item>

        <item name="themeName">light</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarDivider">@null</item>
        <item name="android:actionBarDivider">@null</item>

        <item name="actionBarTheme">@style/ToolbarStyle</item>
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>

        <item name="actionModeBackground">@color/browse_brand</item>
        <item name="actionBarPopupTheme">@style/ToolbarStyle</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle_Custom</item>
        <item name="android:dialogTitle">@style/DialogWindowTitle_Custom</item>

    </style>



</resources>
