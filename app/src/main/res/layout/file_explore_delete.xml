<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:clickable="true"
     >
	<RelativeLayout
	    android:id="@+id/files_header"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    >
	    <Button
			android:layout_alignParentRight="true"
	        android:id="@+id/file_explore_delete_now" 
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:drawableLeft="@drawable/content_discard"
	        android:text="@string/label_delete"
	        />

	</RelativeLayout>
	<ListView android:id="@+id/delete_files_list"
	   android:layout_marginTop="20dp"
	   android:layout_width="match_parent"
	   android:layout_height="match_parent"
	/>

	<LinearLayout 
	    android:id="@+id/file_explore_deleteing"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:visibility="gone"
	    >
		<ProgressBar
		    android:id="@+id/file_explore_progress_bar"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		     />
	    <TextView 
		    android:id="@+id/file_explore_progress_text"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    style="@style/info_text"
		    android:text="Deleteing"
		    android:layout_margin="20dp"
		    android:padding="5dp"
		    android:layout_gravity="center"
		    />
	</LinearLayout>
	<LinearLayout 
	    android:id="@+id/file_explore_deleteing_completed"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:visibility="gone"	    
	    >
	    <TextView 
		    android:id="@+id/files_delete_completed"
		    style="@style/info_text"
		    android:text="completed"
		    android:layout_margin="20dp"
		    android:padding="5dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    />
	    <run.brief.b.bButton 
	        android:id="@+id/file_explore_complete_button"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:drawableLeft="@drawable/navigation_accept"
		    android:layout_gravity="right"
		    android:text="@string/ok"
	        />
	    <TextView 
		    android:id="@+id/file_explore_complete_text_details"
		    android:layout_margin="20dp"
		    android:layout_marginTop="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    />
	</LinearLayout>
</LinearLayout>

