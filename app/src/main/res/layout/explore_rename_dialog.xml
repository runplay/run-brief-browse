<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"

android:layout_height="wrap_content"

	android:orientation="vertical"
    style="@style/DialogWindowTitle_Custom"
	>
<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	android:paddingLeft="60dp"
	android:paddingRight="60dp"
    android:orientation="horizontal">
	<EditText
		android:id="@+id/file_name_edit"
		android:layout_height="wrap_content"
		android:layout_width="0dp"
		android:layout_weight="1"
        android:maxLines="2"
		style="@style/FontSizeXLarge"

		/>

	<TextView
		android:id="@+id/file_name_ext"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
        android:layout_gravity="bottom"
		android:layout_toRightOf="@id/file_name_edit"
		android:paddingTop="15dp"
		style="@style/FontSizeMedium"
		/>
</LinearLayout>
<Button
	android:id="@+id/file_explore_rename_now"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:text="@string/label_rename"
    android:layout_gravity="right|end|center_vertical"
	android:gravity="left|center_vertical"
	android:drawableLeft="@drawable/content_edit"
	android:background="@drawable/btn_general"
	android:paddingLeft="5dp"
	android:paddingRight="5dp"
	/>
    <Button
        android:id="@+id/dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/label_cancel"
        android:drawableLeft="@drawable/navigation_cancel"
        style="@style/popup_button_close"
        android:gravity="left|center_vertical"

        />
</LinearLayout>